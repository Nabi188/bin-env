generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String    @id @default(uuid())
  name        String
  description String    @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  envFiles    EnvFile[]
}

model EnvFile {
  id         String   @id @default(uuid())
  name       String // ví dụ: dev, staging, production
  rawContent String // đã được mã hóa (encrypt) trước khi lưu
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}
